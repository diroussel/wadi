{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "target/tsc-build",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
  },
  "include": [
    "./src",
  ]
}
