{
  "name": "@diroussel/wadi",
  "description": "The pipeline util",
  "license": "MIT",
  "version": "0.4.1",
  "private": true,
  "sideEffects": false,
  "exports": {
    "import": "./target/bundle/wadi.mjs",
    "require": "./target/bundle/wadi.js"
  },
  "bin": {
    "wadi": "target/bundle/wadi.js"
  },
  "files": [
    "target/bundle"
  ],
  "scripts": {
    "clean": "rm -rf target dist",
    "build": "tsup",
    "test:unit": "jest",
    "cover:unit": "pnpm run test:unit --coverage",
    "lint": "xo",
    "fix": "xo --fix",
    "prepare": "pnpm run build",
	  "test": "pnpm run typecheck && pnpm run test:unit && pnpm run lint",
    "package": "./scripts/package.sh",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "glob": "^10.3.12",
    "yauzl-promise": "^4.0.0",
    "p-map": "^4.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
	"@types/yauzl-promise": "^4.0.0",
	"@aws-sdk/client-s3": "3.379.1",
	"@aws-sdk/client-ssm": "3.379.1",
	"@aws-sdk/signature-v4-crt": "3.378.0",
	"@aws-sdk/types": "3.378.0",
    "@swc/core": "^1.4.16",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/yargs": "^17.0.32",
    "jest": "^29.7.0",
    "np": "^8.0.4",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "xo": "^0.58.0"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/no-floating-promises": "off",
      "@typescript-eslint/no-loop-func": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-require-imports": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/return-await": [
        "off",
        "always"
      ],
      "import/extensions": "off",
      "import/no-anonymous-default-export": "off",
      "import/no-cycle": "off",
      "no-return-await": "off",
      "n/file-extension-in-import": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prefer-top-level-await": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "packageManager": "pnpm@8.6.10"
}
